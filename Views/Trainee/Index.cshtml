

@{
    ViewData["Title"] = "Index";
}
@model List<ListTraineeViewModel>

<div class="d-flex justify-content-between m-5">
    <h3 class="text-center">Trainee</h3>
    <a class="btn btn-success" href="/Instructore/Create">Create</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Department Name</th>
            <th scope="col">Grade</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Grade</td>
                <td>@item.DepartmentName</td>
                <td><img src="@item.ImageUrl" alt="Avatar" class="img-fluid" width="50"></td>
                <td>
                    <a href="/trainee/details/@item.Id" class="btn btn-primary btn-sm">Details</a>
@*                     <a href="/trainee/edit/@item.Id" class="btn btn-info btn-sm">Edit</a>
                    <a href="/trainee/delete/@item.Id" class="btn btn-danger btn-sm">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>